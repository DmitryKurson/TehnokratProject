@{
    ViewData["Title"] = "Ремонт смартфонів";
    ViewData["PageCss"] = "repair.css";
}


<body>
    <main class="repair-page">
      <nav class="breadcrumbs">
            <a href="/">Головна</a> / <a asp-area="User" asp-controller="Services" asp-action="List">Послуги</a> /
        <span class="font-bold">Ремонт смартфонів</span>
      </nav>

        <h1 class="page-title">Ми ремонтуємо:</h1>

      <div class="tabs">
        <div class="tab">
          <a>Apple</a>
        </div>
        <div class="tab">
          <a>Samsung</a>
        </div>
        <div class="tab">
          <a>Xiaomi</a>
        </div>
        <div class="tab">
          <a>Huawei</a>
        </div>
        <div class="tab">
          <a>Oppo</a>
