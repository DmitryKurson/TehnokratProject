@model TehnokratProject.Models.Feedback

<h2>Додати відгук</h2>

<style>
    form {
        max-width: 400px;
        margin: auto;
        padding: 20px;
        border: 10px solid #282828;
        border-radius: 20px;
        background: #282828;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
    }

    input, textarea {
        width: 100%;
        padding: 8px;
        margin: 5px 0;
        border: 10px solid #282828;
        border-radius: 20px;
        font-size: 14px;
    }

    label {
        color: #EDCE63;
        font-size: 18px;
        font-weight: bold;
        display: block;
        margin-top: 10px;
    }

    input[type="submit"] {
        background: #EDCE63;
        color: #282828;
        border: none;
        border-radius: 20px;
        cursor: pointer;
        padding: 10px;
        font-size: 16px;
    }

        input[type="submit"]:hover {
            background: #EDCE63;
        }
</style>

<form asp-action="Create" asp-controller="Feedback">
    <label asp-for="author_name">Ім'я</label>
    <input type="text" asp-for="author_name" required />

    <label asp-for="author_email">Email</label>
    <input type="email" asp-for="author_email" required />

    <label asp-for="text">Відгук</label>
    <textarea placeholder="Напишіть відгук тут" asp-for="text" required></textarea>

    <label asp-for="rating">Оцініть нас від 1 до 5</label>
    <input type="number" asp-for="rating" min="1" max="5" required />

    <input type="submit" value="Відправити відгук!" />
</form>

<form asp-action="index" asp-controller="feedback">
    <input type="submit" value="Назад" style="background: #6c757d;" />
</form>