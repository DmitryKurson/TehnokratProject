<form asp-action="Create" asp-controller="Product" enctype="multipart/form-data">
    <p>
        <label asp-for="title">Назва</label><br />
        <input type="text" asp-for="title" />
    </p>
    <p>
        <label asp-for="brand">Бренд</label><br />
        <select asp-for="brand" asp-items="@(new SelectList(Model.BrandOptions))">
            <option value="">-- Оберіть бренд --</option>
        </select>
        <span asp-validation-for="brand" class="text-danger"></span>
    </p>
    <p>
        <label asp-for="description">Опис</label><br />
        <textarea placeholder="Напишіть опис тут" asp-for="description"></textarea>
    </p>
    <p>
        <label asp-for="price">Ціна</label><br />
        <input type="number" asp-for="price" />
    </p>
    <p>
        <label asp-for="state">Стан</label><br />
        <select asp-for="state" asp-items="@(new SelectList(Model.StateOptions))">
            <option value="">-- Стан --</option>
        </select>
        <span asp-validation-for="state" class="text-danger"></span>
    </p>
    <p>
        <label>Зображення:</label>
        <input asp-for="ImageFile" type="file" /><br>
    </p>
    <p>
        <label asp-for="category_id">Category</label><br />
        <select asp-for="category_id" asp-items="@(new SelectList(Model.Categories, "id", "title"))">
            <option value="">-- Оберіть категорію товарів --</option>
        </select>
        <span asp-validation-for="category_id" class="text-danger"></span>
    </p>

    <p>
        <input type="submit" value="Додати товар" />
    </p>
</form>

<form asp-action="index" asp-controller="Product">
    <input type="submit" value="Назад" />
</form>